<%- include('partials/_header.ejs') %>
    <div class="container-fluid mb-2">
        <div class="row">
            <div class="col-3 p-3">
                <div class="card text-center shadow" style="height:150px; width:150px"><br>
                    <div class="card-body">
                        <p class="card-text">Total Registros</p>
                        <h3 class="card-title"><%= ventas_diarias.length %></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container text-center mt-5">
        <h1>Registros Ventas Diarias</h1>
    </div>

    <div class="container mt-5">
        <div class="row mt-5">
            <div class="col-md-9">
                <div class="container mt-5">
                    <table id="example" class="table table-responsive table-striped table-active shadow p-3 mb-5 bg-white rounded">
                        <thead class="thead">
                            <tr>
                                <th>ID</th>
                                <th>Total Ventas</th>
                                <th>Total Gastos</th>
                                <th>Producido día</th>
                                <th>Creada</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < ventas_diarias.length; i++) { %>
                                
                                <tr class="text-center">
                                    <th>
                                        <%= ventas_diarias[i].id %>
                                    </th>
                                    <th>
                                        <%= ventas_diarias[i].total_venta %>
                                    </th>
                                    <th>
                                        <%= ventas_diarias[i].total_gasto %>
                                    </th>  
                                    <th>
                                        <%= ventas_diarias[i].total_ganancia %>

                                    </th>                                  
                                    <th>
                                        <%= ventas_diarias[i].fecha_creacion %>
                                    </th>
                                    <th>
                                        <button type="button" class="btn text-center" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal<%= ventas_diarias[i].id %>"
                                            data-bs-whatever="@fat">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="blue"
                                                class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </button>
                                    </th>
                                    <th>
                                        <a  href="/deleteVenta/<%= ventas_diarias[i].id %> ">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                                class="bi bi-trash text-center" viewBox="0 0 16 16">
                                                <path
                                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd"
                                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>
                                    </th>
                                </tr>
                                <div class="modal fade" id="exampleModal<%= ventas_diarias[i].id%>"
                                    tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Modificar Registro</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post" action="/editVenta/<%=ventas_diarias[i].id%>">
                                                    <div class="mb-3">
                                                        <label for="message-text"
                                                            class="col-form-label">Total Ventas</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="total_venta" value="<%= ventas_diarias[i].total_venta %>">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="message-text"
                                                            class="col-form-label">Total Gastos</label>
                                                        <input class="form-control" id="message-text" type="text"
                                                            name="total_gasto" value="<%= ventas_diarias[i].total_gasto %>">
                                                    </div>         
                                      
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Cancelar</button>
                                                        <input type="submit" class="btn btn-primary">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </tbody>
                    </table>
                </div>


            </div>
            <div class="col-md-3">
                <div class="card mt-5">
                    <div class="card-body">
                        <form action="/addVenta" method="post">
                            <div class="form-group mt-2">
                                <input type="number" name="total_venta" placeholder="Ventas del día" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="total_gasto" placeholder="Gastos del día" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2 text-center">
                                <button type="submit" class="btn btn-dark btn-block">Agregar Registro</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert !="undefined" ) {%>
        <script>
            Swal.fire('Eliminado Correctamente').then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>

            <%- include('partials/_footer.ejs') %>