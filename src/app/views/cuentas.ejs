<%- include('partials/_header.ejs') %>
    <div class="container-fluid mb-2">
        <div class="row">
            <div class="col-3 p-3">
                <div class="card text-center shadow" style="height:150px; width:150px"><br>
                    <div class="card-body">
                        <p class="card-text">Total Facturas</p>
                        <h3 class="card-title"><%= cuentas_proveedores.length %></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container text-center mt-5">
        <h1>Cuentas por pagar</h1>
    </div>

    <div class="container mt-5">
        <div class="row mt-5">
            <div class="col-md-9">
                <div class="container mt-5">
                    <table id="example" class="table table-responsive table-striped table-active shadow p-3 mb-5 bg-white rounded">
                        <thead class="thead">
                            <tr>
                                <th>ID Factura</th>
                                <th>Nit Proveedor</th>
                                <th>Días Descuento</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th>Limite Pago</th>
                                <th>Creada</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr> 
                        </thead>
                        <tbody>
                            <% for (let i=0; i < cuentas_proveedores.length; i++) { %>
                                <tr>
                                    <% if (cuentas_proveedores[i].nit_proveedor == cuentas_proveedores[i].nit_proveedor) { %>
                                            <th>
                                                <%= cuentas_proveedores[i].id_factura %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].nit_proveedor %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].dias_descuento %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].total %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].estado %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].fecha_lim %>
                                            </th>
                                            <th>
                                                <%= cuentas_proveedores[i].fecha_creacion %>
                                            </th>
                                            <th>
                                                <button type="button" class="btn text-center" data-bs-toggle="modal"
                                                    data-bs-target="#exampleModal<%= cuentas_proveedores[i].id_factura %>"
                                                    data-bs-whatever="@fat">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="blue"
                                                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                        <path
                                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd"
                                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </button>
                                            </th>
                                            <th>
                                                <a  href="/deleteCuenta/<%= cuentas_proveedores[i].id_factura %> ">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                                        class="bi bi-trash text-center" viewBox="0 0 16 16">
                                                        <path
                                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                        <path fill-rule="evenodd"
                                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                                    </svg>
                                                </a>
                                            </th>
                                        </tr>
                                        <div class="modal fade" id="exampleModal<%= cuentas_proveedores[i].id_factura %>"
                                            tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Modificar Cuenta</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form method="post" action="/editCuenta/<%=cuentas_proveedores[i].id_factura%>">
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Nit Proveedor</label>
                                                                <input class="form-control" id="message-text" type="text"
                                                                    name="nit_proveedor" value="<%= cuentas_proveedores[i].nit_proveedor %>">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Días Descuento</label>
                                                                <input class="form-control" id="message-text" type="text"
                                                                    name="dias_descuento" value="<%= cuentas_proveedores[i].dias_descuento %>">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text"
                                                                    class="col-form-label">Total</label>
                                                                <input class="form-control" id="message-text" type="text"
                                                                    name="total" value="<%= cuentas_proveedores[i].total %>">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Estado</label>
                                                                <input class="form-control" id="message-text" type="text"
                                                                    name="estado" value="<%= cuentas_proveedores[i].estado %>">
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="message-text" class="col-form-label">Limite Pago</label>
                                                                <input class="form-control" id="message-text" type="date"
                                                                    name="fecha_lim"
                                                                    value="<%= cuentas_proveedores[i].fecha_lim %>">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Cancelar</button>
                                                                <input type="submit" class="btn btn-primary">
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>   
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="col-md-3">
                <div class="card mt-5">
                    <div class="card-body">
                        <form action="/addCuenta" method="post">
                            <div class="form-group mt-2">
                                <input type="number" name="id_factura" placeholder="ID" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="nit_proveedor" placeholder="Nit Proveedor" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="dias_descuento" placeholder="Días Descuento" class="form-control"
                                    required>
                            </div>
                            <div class="form-group mt-2">
                                <input type="number" name="total" placeholder="Total" class="form-control"
                                    required>
                            </div>
                            <div class="form-group horizontal">
                                <div >
                                    <label for="estado" class="control-label">Estado: </label>
                                    <br>
        
                                    <label class="radio-inline">
                                        <input type="radio" name="estado" value="pagar" id=""/> Pagar
                                    </label>
        
                                    <label class="radio-inline">
                                        <input type="radio" name="estado" value="pagada" /> Pagada
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="estado" value="cancelada" /> Cancelada
                                    </label>
                                </div>
                            </div>
                            <div class="form-group mt-2">
                                <input type="date" name="fecha_lim" placeholder="Limite Pago"
                                    class="form-control" required>
                            </div>
                            <div class="form-group mt-2 text-center">
                                <button type="submit" class="btn btn-dark btn-block">Agregar Cuenta</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert !="undefined" ) {%>
        <script>
            Swal.fire('Eliminado Correctamente').then(() => {
                window.location = '/<%= ruta %>'
            })
        </script>
        <% } %>

            <%- include('partials/_footer.ejs') %>